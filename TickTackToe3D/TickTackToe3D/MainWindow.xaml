    <Grid
        x:Name="_mainGrid"
        Background="{x:Static Brushes.Aquamarine}"
		ClipToBounds="True">


        <Button
            x:Name="_button"
            Background="Red"
            Width="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Height}"
            Height="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type Grid}}, Path=ActualHeight}"
            BorderThickness="0"
            Padding="0">
            <Button.Content>

                <!--<Ellipse
                    Width="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type Button}}, Path=Width}"
                    Height="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type Button}}, Path=Height}"
                    Fill="#ffffff" Opacity="0.5" />-->

                <Grid
                    ClipToBounds="True"
                    Width="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type Button}}, Path=Width}"
                    Height="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type Button}}, Path=Height}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="1*" />
                        <ColumnDefinition
                            Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="1*" />
                        <RowDefinition
                            Height="1*" />
                    </Grid.RowDefinitions>
                    <Ellipse
                        Grid.Column="0"
                        Grid.Row="0"
                        Fill="Black"
                        Opacity="0.25" />
                    <Ellipse
                        Grid.Column="1"
                        Grid.Row="0"
                        Fill="Black"
                        Opacity="0.5" />
                    <Ellipse
                        Grid.Column="0"
                        Grid.Row="1"
                        Fill="Black"
                        Opacity="0.75" />
                    <Ellipse
                        Grid.Column="1"
                        Grid.Row="1"
                        Fill="Black" />
                </Grid>
            </Button.Content>

        </Button>

    </Grid>

</Window>
